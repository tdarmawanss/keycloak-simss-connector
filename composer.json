{
    "name": "simss/keycloak-simss-connector",
    "description": "Shared Keycloak OIDC authentication module for SIMSS applications",
    "type": "library",
    "license": "GPL-3.0",
    "require": {
        "php": ">=7.1",
        "jumbojett/openid-connect-php": "^0.9.10",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Simss\\KeycloakAuth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Simss\\KeycloakAuth\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform-check": false
    }
}
